<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shlezy.mylocation.ConnectionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Server:"
        android:id="@+id/conn_text_server"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="My IP:"
        android:layout_below="@id/conn_text_server"
        android:id="@+id/conn_text_ip"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Location:"
        android:layout_below="@id/conn_text_ip"
        android:id="@+id/conn_text_location"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="#CCCCCC"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Log\n"
        android:layout_below="@id/conn_text_location"
        android:id="@+id/conn_log"
        android:textColor="@android:color/black"/>
    <!--TODO: show server and client details and a log screen !-->
</RelativeLayout>
